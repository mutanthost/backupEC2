#! /bin/sh
#
# ott - shell for invoking the Object Type Translator
# Usage:  ott <option>=<option_value> ...
#
# Note: The options are automatically prefixed with two other options
#       that specify a couple of environment variables:
#       nlslang passes in $NLS_LANG and orahome passes in $ORACLE_HOME.
#
# %W% %E%
#
#set -x 
unset JAVA_HOME
JAVA_HOME=$ORACLE_HOME/jdk
export JAVA_HOME
JRECLASSPATH=:$ORACLE_HOME/jdbc/lib/ojdbc8.jar:$ORACLE_HOME/jlib/orai18n.jar:$ORACLE_HOME/precomp/lib/ottclasses.zip
export JRECLASSPATH
JREOPTIONS=
LD_LIBRARY_PATH=$ORACLE_HOME/lib:$JAVA_HOME/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH
while [ $# -gt 0 ]
do
      case $1 in
      user*)
              OTTUSER="$OTTUSER $1"
              export OTTUSER ;;
      *)
              args="$args $1";;
      esac
shift
done
exec $JAVA_HOME/bin/java $JREOPTIONS  -classpath $JRECLASSPATH oracle.ott.c.CMain nlslang=${NLS_LANG} orahome=${ORACLE_HOME} $args
