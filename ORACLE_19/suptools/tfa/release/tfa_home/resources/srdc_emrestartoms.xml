<collections>
<collection id="emrestartoms">
        <description>EM SRDC - Re-start OMS.</description>
        <user_inputs>
            <user_input cmdline="" default="" showprompt="1" setenv="NO" validate="YN" prompt="By executing this SRDC, OMS will be bounced (this step is recommended in order to start with a new set of fresh OMS log files).">USERINPUT-EMCONTINUE</user_input>
        </user_inputs>
        <onevents>
                <event>
                </event>
        </onevents>
        <duration>12h</duration>
        <clusterwide>no</clusterwide>
        <filter_files>
                <types>
                </types>
                <filter_file_patterns>
                    <filter_file_pattern>alert_.*\.log</filter_file_pattern>
                    <filter_file_pattern>trc</filter_file_pattern>
                    <filter_file_pattern>log</filter_file_pattern>
                    <filter_file_pattern>archive\/osw</filter_file_pattern>
                    <filter_file_pattern>ExaWatcher\/archive</filter_file_pattern>
                </filter_file_patterns>
        </filter_files>
        <components>
            <component>OS</component>
        </components>
        <commands>
            <script type="OS" name="os_bounceOMS" timeout="500" validfor="OMS" platform="allux" version="">
            export ORACLE_HOME=%EMOMSOHOME%
            export PATH=$ORACLE_HOME/bin:$PATH
            emctl stop oms
            emctl start oms
            </script>
            <script type="OS" name="os_bounceOMSWin" timeout="500" validfor="OMS" platform="MSWin32" version="">
            set ORACLE_HOME=%EMOMSOHOME%
            set PATH=%ORACLE_HOME%\bin;%PATH%
            emctl stop oms
            emctl start oms
            </script>
        </commands>
        <runtime_flags>
        </runtime_flags>
</collection>
</collections>
