<commands>
  <cmd command="raw" flags="-qa"/>
  <cmd command="showmount" flags="-e"/>
  <cmd command="cat" flags="/etc/sysconfig/oracleasm"/>
  <cmd command="ls" flags="/etc/sysconfig/oracleasm"/>
  <cmd command="ls" flags=" -l /usr/sbin/oracleasm-discover"/>
  <cmd command="ls" flags="/dev/oracleasm/disks"/>
  <cmd command="ls" flags="/dev/mpath/*"/>
  <cmd command="ls" flags="/dev/emcpower*"/>
  <cmd command="ibnetdiscover"/>
  <cmd command="ibqueryerrors"/>
  <cmd command="ibswitches"/>
  <cmd command="iblinkinfo"/>
  <cmd command="%GRID_HOME%/bin/crsctl" flags="config crs"/>
  <cmd command="%GRID_HOME%/bin/crsctl" flags="query css ipmiconfig"/>
  <cmd command="%GRID_HOME%/bin/crsctl" flags="get css ipmiaddr"/>
  <cmd command="acfsutil" flags="log"/>
  <cmd command="/opt/oracle.ExaWatcher/GetExaWatcherResults.sh" flags=""/>
  <cmd command="/opt/oracle.SupportTools/sundiag.sh" flags=""/>
</commands>

